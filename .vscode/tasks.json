{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build GLUT Project",
            "type": "shell",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-lfreeglut",
                "-lopengl32",
                "-lglu32",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build GLUT project with FreeGLUT and OpenGL"
        },
        {
            "label": "Run GLUT Project",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "dependsOn": "Build GLUT Project",
            "group": "none"
        }
    ]
}
